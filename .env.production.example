# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.production and fill in your actual values
# These variables should be set in Vercel Dashboard

# ============================================
# DATABASE (Vercel Postgres)
# ============================================
# Get from Vercel Postgres dashboard after creating database
DATABASE_URL="postgres://user:password@host:5432/database?sslmode=require"
DIRECT_URL="postgres://user:password@host:5432/database?sslmode=require"

# ============================================
# APPLICATION
# ============================================
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-production-secret-min-32-chars-CHANGE-THIS"
NEXTAUTH_URL="https://your-app.vercel.app"

# ============================================
# SIMPLICATE API
# ============================================
# Get from your Simplicate dashboard
SIMPLICATE_API_KEY="your-api-key"
SIMPLICATE_API_SECRET="your-api-secret"
SIMPLICATE_DOMAIN="your-company.simplicate.nl"

# ============================================
# EMAIL (Resend)
# ============================================
# Sign up at https://resend.com (100 emails/day free)
RESEND_API_KEY="re_your_api_key_here"
EMAIL_FROM="noreply@yourdomain.com"

# ============================================
# RATE LIMITING (Upstash Redis)
# ============================================
# Optional but recommended for production
# Sign up at https://upstash.com (10,000 requests/day free)
# UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token"

# ============================================
# NOTIFICATIONS (Slack - Optional)
# ============================================
# Create Slack App at https://api.slack.com/apps
# SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry for error tracking
# NEXT_PUBLIC_SENTRY_DSN="https://key@org.ingest.sentry.io/project"
# SENTRY_ORG="your-organization"
# SENTRY_PROJECT="your-project"
# SENTRY_AUTH_TOKEN="your-auth-token"

# ============================================
# BUILD CONFIGURATION
# ============================================
# Skip environment validation during build
SKIP_ENV_VALIDATION="false"
