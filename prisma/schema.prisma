// Minimal Next.js Fullstack Template Schema
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// USER & AUTHENTICATION
// ==========================================

enum UserRole {
  USER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role          UserRole  @default(USER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// APPLICATION SETTINGS
// ==========================================

model AppSettings {
  id                    String   @id @default(cuid())

  // General Settings
  siteName              String   @default("My App")
  siteUrl               String?
  timezone              String   @default("UTC")

  // Appearance Settings
  theme                 String   @default("system")
  accentColor           String   @default("#000000")

  // Notification Settings
  emailNotifications    Boolean  @default(true)
  pushNotifications     Boolean  @default(false)

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

// ==========================================
// TCO CALCULATOR MODELS
// ==========================================

// Vehicle type categories (6 types)
model VehicleType {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "Kleine Bakwagen", "Medium Bakwagen", etc.
  description String?
  imageUrl    String?  // Path to vehicle image

  // Default specifications
  defaultGvw  Float?   // Gross Vehicle Weight (kg)
  defaultPayload Float? // Payload capacity (kg)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sessions    CalculationSession[]

  @@index([name])
}

// Driving area categories (4 areas)
model DrivingArea {
  id              String   @id @default(cuid())
  name            String   @unique // "Regionaal", "Nationaal", "Nationaal+", "Internationaal"
  description     String?

  // Default km/year for this area
  defaultKmPerYear Float

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  sessions        CalculationSession[]

  @@index([name])
}

// User calculation sessions
model CalculationSession {
  id          String   @id @default(cuid())

  // Session metadata
  userId      String?  // Optional - allow anonymous calculations
  sessionKey  String   @unique @default(cuid()) // For anonymous sessions

  // Step 1: Vehicle Selection
  vehicleTypeId String?
  vehicleType   VehicleType? @relation(fields: [vehicleTypeId], references: [id])

  // Step 2: Driving Area
  drivingAreaId String?
  drivingArea   DrivingArea? @relation(fields: [drivingAreaId], references: [id])

  // Step 3: Parameters (stored as JSON for flexibility)
  // Contains 6 tabs: Voertuigkenmerken, Verbruik, Belastingen, Subsidies, Financieel, Extra
  parametersData Json?

  // Step 4: Results (cached calculation results)
  resultsData Json?

  // Progress tracking
  currentStep Int      @default(1) // 1-4
  isCompleted Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([sessionKey])
  @@index([vehicleTypeId])
  @@index([drivingAreaId])
}

// Default calculation presets and tax rates
model CalculationPreset {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "2026 Tax Rates"
  year        Int      // Tax year (e.g., 2026)
  isActive    Boolean  @default(false) // Only one active preset at a time

  // Tax rates
  motorTaxPerYear       Float  // Motor tax (€345 for 2026)
  truckTollDiesel       Float  // Truck toll diesel (€2820.80 for 2026)
  truckTollBev          Float  // Truck toll BEV (€537.60 for 2026)

  // Default fuel/energy prices (€/unit)
  dieselPricePerLiter   Float
  electricityPricePerKwh Float
  hydrogenPricePerKg    Float

  // Default consumption rates
  dieselConsumption     Float  // L/100km
  bevConsumption        Float  // kWh/100km
  fcevConsumption       Float  // kg H2/100km
  h2iceConsumption      Float  // kg H2/100km

  // Financial defaults
  interestRate          Float  // Interest rate (%)
  depreciationYears     Int    // Depreciation period

  // Default values (stored as JSON for flexibility)
  defaultValues Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([year])
  @@index([isActive])
}
